<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="15" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/23.0.1" fx:controller="karaoke.controller.SettingsFxmlController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Label text="Settings" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Separator/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="150" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="200"/>
        </columnConstraints>

        <Label text="AudioSpectrum Color:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ColorPicker fx:id="colorPickerSpectrum" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="AutoSave:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ToggleButton fx:id="toggleAutoSave" text="Off" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="buttonApply" text="Apply" onAction="#handleApply" prefWidth="80"/>
        <Button fx:id="buttonCancel" text="Cancel" onAction="#handleCancel" prefWidth="80"/>
    </HBox>
</VBox>
